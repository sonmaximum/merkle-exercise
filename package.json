    "@types/supertest": "^6.0.3",
    "jest": "^29.7.0",
    "npmignore": "^0.3.1",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "express": "^5.1.0"
  },
  "publishConfig": {
    "ignore": [
        "!dist/",
        "src/",
        "test/"
